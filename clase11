print("-----Registro de libros-----")
lista_libros = [
    
    {
    'titulo': 'papelucho',
    'autor': 'Marcela Paz',
    'año': 1947,
    'editorial': 'Nacional'
    },

    { 
    'titulo' : ' El silencio de los inocentes',
    'autor'  : 'Thomas Harris',
    'año'    : 1988,
    'editorial': 'Bantam Books'
    }  
]
print(lista_libros) 

while True:
    entrada_titulo = input("Ingrese el título del libro: ")
    entrada_autor = input("Ingrese el autor del libro: ")   
    enttrada_año = input("Ingrese el año de publicación del libro: ")
    lista_libros.append({'titulo': entrada_titulo, 'autor': entrada_autor, 'año': enttrada_año})
    print("Libro agregado exitosamente.")
    print(lista_libros)
    continuar = input("¿Desea agregar otro libro? (s/n): ")
    if continuar == 'n':
        break
    else:
        continue    
    
for i in range(len(lista_libros)):
    print(lista_libros[i]['año'], lista_libros['titulo'])
    
